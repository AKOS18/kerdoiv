  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const datValues = { dat1: null, dat2: null, dat3: null, dat4: null };
  
    function selectOption(option, groupId) {
      const options = [1, 2, 3, 4];
      options.forEach((opt) => {
        const element = document.getElementById(`${groupId}-option${opt}`);
        element.classList.toggle('selected', opt === option);
        if (groupId === 'group1' && opt === option) {
          datValues.dat1 = opt;
        } else if (groupId === 'group2' && opt === option) {
          datValues.dat2 = opt;
        } else if (groupId === 'group3' && opt === option) {
          datValues.dat3 = opt;
        }
      });
    }
  
    function sendDatValuesToGAS() {
      const url = 'https://script.google.com/macros/s/AKfycbyiNwXjmZroahdqekiNyX4pE8NJzAYqD3H4FUsCPrZv3NxFy1_E65RnUDJBpm7rJliz-g/exec';
  
      datValues.dat4 = document.querySelector('textarea[name="dat4"]').value;
  
      fetch(url, {
        method: 'POST',
        body: new URLSearchParams(datValues)
      })
        .then(response => response.json())
        .then(result => {
          if (result.result === 'success') {
            console.log('Adatok sikeresen elkĂĽldve, sor:', result.row);
            displayChart(); 
            displayAverages();
          } else {
            console.error('Hiba tĂ¶rtĂ©nt:', result.error);
          }
        })
        .catch(error => console.error('HĂˇlĂłzati hiba:', error));
    }
  
    
  
    document.querySelector('form').addEventListener('submit', function(event) {
      event.preventDefault();
      sendDatValuesToGAS();
    });
  </script>  

